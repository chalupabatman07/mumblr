{
  "name": "monorepo",
  "description": "My base for monorepo which include a React web app, React Native and Server",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/react-native-dev-menu",
      "**/react-native-macos",
      "**/react-native-windows"
    ],
    "packages": [
      "./packages/**"
    ]
  },
  "scripts": {
    "bootstrap": "npx yarn && npx lerna bootstrap",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "update:deps": "node ./scripts/updateDeps.js",
    "setup": "npx yarn && npx yarn bootstrap && npx yarn husky install",
    "start:server": "npx yarn workspace @monorepo/server dev",
    "start:client": "npx yarn workspace @monorepo/client start",
    "android:start": "npx yarn workspace @monorepo/mobile android"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "eslint-config-react-yas": "^1.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "npm-check-updates": "^12.2.1",
    "stmux": "^1.8.3",
    "typescript": "^4.5.5",
    "yarn": "^1.22.17"
  }
}
